<h3>Main controls</h3>
<div id="globals-section">
    Control Time: <button id='pause-button' {{action 'pausePlay'}}>
    {{#if paused}}
        Play
    {{else}}
        Pause
    {{/if}}
    </button>{{input id='time-chooser' value=pageTime type='range' min='0' max='113097'}}<br/>
    Hide Overflow?: {{input checked=hiddenOverflow type='checkbox'}}<br/>
</div>
<div id="editor-section">
    Change page: 
    {{view 'select'
        content=pages
        optionValuePath='content.objectId'
        optionLabelPath='content.fullName'
        value=currentPageID}}
    <br/>
    <button {{action 'newPage'}}>Add new blank page</button><br/>
    {{#with currentPage as |page|}}
        <div id="edit-section">
            <h3>Page controls -  {{page.objectId}}</h3>
            <table>
            <tr>
                <td>
                    Example name: {{input value=page.name}}
                </td>
            </tr>
            <tr>
                <td>
                    Page name: {{input value=page.page.name}}
                </td>
            </tr>
            <tr>
                <td>
                    Page X: {{input value=page.page.x}}
                </td>
            </tr>
            <tr>
                <td>
                    Page Y: {{input value=page.page.y}}
                </td>
            </tr>
            <tr>
                <td>
                    Page Speed: {{input value=page.page.speed}}
                </td>
            </tr>
            <tr>
                <td>
                    Page Perspective: {{input value=page.page.perspective}}
                </td>
            </tr>
            <tr>
                <td>
                    Page device: {{input value=page.device}}
                </td>
            </tr>
            <tr>
                <td>
                    Sounds:
                </td>
            </tr>
            <tr>
                <td>
                    name, src, loop, volume
                </td>
            </tr>
            {{#each soundsToEdit key="@guid" as |sound|}}
                <tr>
                    <td>
                        {{input value=sound.name type="text"}}{{input value=sound.src type="text"}}{{input value=sound.loop type="number"}}{{input value=sound.volume type="number"}}<button {{action 'removeSound' sound}}>delete</button>
                    </td>
                </tr>
            {{/each}}
            <tr>
                <td>
                <button {{action 'addNewSound'}}>Add new Sound</button>
                </td>
            </tr>
            <tr>
                <td>
                    <button {{action 'saveCurrentPage'}}>Save everything on page</button>
                </td>
            </tr>
            <tr>
                <td>
                    <button {{action 'dupeCurrentPage'}}>Duplicate this page</button><br/><br/>
                </td>
            </tr>
            </table>
            <h3>Popup controls</h3>
            <table>
                <tr>
                <td>
                    Change item to edit?:
                    {{view 'select'
                        contentBinding=nodesToEdit
                        optionValuePath='content.name'
                        optionLabelPath='content.name'
                        valueBinding=currentNodeName}}
                </td>
                </tr>
                <tr>
                    <button {{action 'addNewPopup'}}>Add new popup</button><br/>
                </tr>
            {{#with currentNode as |node|}}
            <tr>
                <td>
                    <table border=1>
                        <tbody>
                            <tr>
                                <td>Name: {{config-input node=node value=node.name}}</td>
                                <td>Url: {{config-input node=node value=node.url}}</td>
                                <td>Depth: {{config-input node=node value=node.height type='range' min='0' max='20'}}{{config-input node=node style="width:50px" value=node.height}}</td>
                                <td>Camera Bound? {{view 'config-checkbox' node=node checked=node.cameraBound}}</td>
                                <td>Offset: {{config-input node=node value=node.cameraBoundOffset type='range' min='0' max='20'}}{{config-input node=node style="width:50px" value=node.cameraBoundOffset}}</td>
                                <td>
                                    {{view 'select'
                                        contentBinding=surfaceTypes
                                        optionValuePath='content.value'
                                        optionLabelPath='content.label'
                                        valueBinding=node.surfaceType
                                        prompt="default(image)"}}
                                </td>
                            </tr>
                            <tr>
                                <td>Initial X:{{config-input node=node value=node.initialX type='range' min='-500' max='500'}}{{config-input node=node style="width:50px" value=node.initialX}}</td>
                                <td>Initial Y:{{config-input node=node value=node.initialY type='range' min='-500' max='500'}}{{config-input node=node style="width:50px" value=node.initialY}}</td>
                                <td>Scale: {{config-input node=node value=node.scale step="0.01" type='range' min='0.1' max='3'}}{{config-input node=node style="width:50px" value=node.scale}}</td>
                                <td>XYRatio: {{config-input node=node value=node.xyRatio step="0.01" type='range' min='0.1' max='3'}}{{config-input node=node style="width:50px" value=node.xyRatio}}</td>
                                <td>Singspeed: {{config-input node=node value=node.singSpeed type='range' min='0' max='3000'}}{{config-input node=node style="width:50px" value=node.singSpeed}}</td>
                                <td>Singmotion: {{config-input node=node value=node.singMotion type='range' min='0' max='3000'}}{{config-input node=node style="width:50px" value=node.singMotion}}</td>
                            </tr>
                            <tr>
                                <td>Animation Time Offset: {{config-input node=node value=node.timeOffset type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.timeOffset}}</td>
                                <td>XOrigin: {{config-input node=node value=node.xOrigin step="0.01" type='range' min='0' max='1'}}{{config-input node=node style="width:50px" value=node.xOrigin}}</td>
                                <td>YOrigin: {{config-input node=node value=node.yOrigin step="0.01" type='range' min='0' max='1'}}{{config-input node=node style="width:50px" value=node.yOrigin}}</td>
                                <td>Text: <textarea value=node.text></textarea></td>
                                <td>Classes: {{config-input node=node value=node.surfaceClasses}}</td>
                                <td>Opacity: {{config-input node=node value=node.opacity step="0.01" type='range' min='0' max='1'}}{{config-input node=node style="width:50px" value=node.opacity}}</td>
                            </tr>
                            <tr>
                                <td>SizeX: {{config-input node=node value=node.sizeX type='range' min='0' max='1500'}}{{config-input node=node style="width:50px" value=node.sizeX}}</td>
                                <td>SizeY: {{config-input node=node value=node.sizeY type='range' min='0' max='1500'}}{{config-input node=node style="width:50px" value=node.sizeY}}</td>
                                <td>InitialRotateX: {{config-input node=node value=node.initialRotateX step="0.01" type='range' min='-3.5' max='3.5'}}{{config-input node=node style="width:50px" value=node.initialRotateX}}</td>
                                <td>InitialRotateY: {{config-input node=node value=node.initialRotateY step="0.01" type='range' min='-3.5' max='3.5'}}{{config-input node=node style="width:50px" value=node.initialRotateY}}</td>
                                <td>InitialRotateZ: {{config-input node=node value=node.initialRotateZ step="0.01" type='range' min='-3.5' max='3.5'}}{{config-input node=node style="width:50px" value=node.initialRotateZ}}</td>
                            </tr>
                            <tr>
                                <td>Translation? {{view 'config-checkbox' node=node checked=node.translate}}</td>
                                <td>X: {{config-input node=node value=node.translateX type='range' min='-500' max='500'}}{{config-input node=node style="width:50px" value=node.translateX}}</td>
                                <td>X Speed: {{config-input node=node value=node.translateXSpeed type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.translateXSpeed}}</td>
                                <td>Y: {{config-input node=node value=node.translateY type='range' min='-500' max='500'}}{{config-input node=node style="width:50px" value=node.translateY}}</td>
                                <td>Y Speed:{{config-input node=node value=node.translateYSpeed type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.translateYSpeed}}</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>Cut? {{view 'config-checkbox' node=node checked=node.translateTypeCut}}</td>
                                <td>StartPercent: {{config-input node=node value=node.translateCutStart type='range' min='0' max='100'}}{{config-input node=node style="width:50px" value=node.translateCutStart}}</td>
                                <td>EndPercent: {{config-input node=node value=node.translateCutEnd type='range' min='0' max='100'}}{{config-input node=node style="width:50px" value=node.translateCutEnd}}</td>
                            </tr>
                            <tr>
                                <td>Motion type: {{view 'config-select'
                                        contentBinding=motionTypes
                                        optionValuePath='content.value'
                                        optionLabelPath='content.label'
                                        valueBinding=node.motionType
                                        prompt="default(sin)"}}
                                </td>
                            </tr>
                            <tr>
                                <td>Rotation? {{view 'config-checkbox' node=node checked=node.rotate}}</td>
                                <td>Angle: {{config-input node=node value=node.rotateAngle type='range' min='1' max='50'}}{{config-input node=node style="width:50px" value=node.rotateAngle}}</td>
                                <td>Speed: {{config-input node=node value=node.rotateSpeed type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.rotateSpeed}}</td>
                                <td>Rotate type: {{view 'config-select'
                                        contentBinding=motionTypes
                                        optionValuePath='content.value'
                                        optionLabelPath='content.label'
                                        valueBinding=node.rotateType
                                        prompt="default(sin)"}}
                                </td>
                            </tr>
                            <tr>
                                <td>Zooming? {{view 'config-checkbox' node=node checked=node.zoom}}</td>
                                <td>Amount: {{config-input node=node value=node.zoomAmount type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.zoomAmount}}</td>
                                <td>Speed: {{config-input node=node value=node.zoomSpeed type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.zoomSpeed}}</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>Relative to translate? {{view 'config-checkbox' node=node checked=node.zoomRelativeTranslate}}</td>
                                <td>Multiplier: {{config-input node=node value=node.zoomRelativeMultiplier type='range' min='0' max='100'}}{{config-input node=node style="width:50px" value=node.zoomRelativeMultiplier}}</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>Cut? {{view 'config-checkbox' node=node checked=node.zoomTypeCut}}</td>
                                <td>StartPercent: {{config-input node=node value=node.zoomCutStart type='range' min='0' max='100'}}{{config-input node=node style="width:50px" value=node.zoomCutStart}}</td>
                                <td>EndPercent: {{config-input node=node value=node.zoomCutEnd type='range' min='0' max='100'}}{{config-input node=node style="width:50px" value=node.zoomCutEnd}}</td>
                            </tr>
                            <tr>
                                <td>Zoom type: {{view 'config-select'
                                        contentBinding=motionTypes
                                        optionValuePath='content.value'
                                        optionLabelPath='content.label'
                                        valueBinding=node.zoomType
                                        prompt="default(sawtooth)"}}
                                </td>
                            </tr>
                            <tr>
                                <td>Skewing? {{view 'config-checkbox' node=node checked=node.skew}}</td>
                                <td>AmountX: {{config-input node=node value=node.skewAmountX type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.skewAmountX}}</td>
                                <td>SpeedX: {{config-input node=node value=node.skewSpeedX type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.skewSpeedX}}</td>
                                <td>AmountY: {{config-input node=node value=node.skewAmountY type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.skewAmountY}}</td>
                                <td>SpeedY: {{config-input node=node value=node.skewSpeedY type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.skewSpeedY}}</td>
                            </tr>
                            <tr>
                                <td>Accelerometer Translation? {{view 'config-checkbox' node=node checked=node.accel}}</td>
                                <td>Amount: {{config-input node=node value=node.accelAmount type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.accelAmount}}</td>
                            </tr>
                            <tr>
                                <td>Animation? {{view 'config-checkbox' node=node checked=node.animation}}</td>
                                <td>Speed: {{config-input node=node value=node.animationSpeed type='range' min='100' max='3000'}}{{config-input node=node style="width:50px" value=node.animationSpeed}}</td>
                                <td>Num Frames: {{config-input node=node value=node.numFrames type='range' min='1' max='60'}}{{config-input node=node style="width:50px" value=node.numFrames}}</td>
                            </tr>
                            <tr>
                                <td><button {{action 'removeCurrentPopup'}}>Remove Popup!!</button></td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            {{/with}}
            <tr>
                <td>
                    <table border=1>
                        <tbody>
                            <tr>
                                <td>Name: <input rv-input="page.camera.name"></td>
                                <td>Url: <input rv-input="page.camera.url"></td>
                                <td>Depth: <input rv-input="page.camera.height" type='range' min='0' max='20'><input style="width:50px" rv-input="page.camera.height"></td>
                            </tr>
                            <tr>
                                <td>Initial X:<input rv-input="page.camera.initialX" type='range' min='-500' max='500'><input style="width:50px" rv-input="page.camera.initialX"></td>
                                <td>Initial Y:<input rv-input="page.camera.initialY" type='range' min='-500' max='500'><input style="width:50px" rv-input="page.camera.initialY"></td>
                                <td>Scale: <input rv-input="page.camera.scale" step="0.01" type='range' min='0.1' max='3'><input style="width:50px" rv-input="page.camera.scale"></td>
                                <td>XYRatio: <input rv-input="page.camera.xyRatio" step="0.01" type='range' min='0.1' max='3'><input style="width:50px" rv-input="page.camera.xyRatio"></td>
                            </tr>
                            <tr>
                                <td>Animation Time Offset: <input rv-input="page.camera.timeOffset" type='range' min='100' max='3000'><input style="width:50px" rv-input="page.camera.timeOffset"></td>
                                <td>XOrigin: <input rv-input="page.camera.xOrigin" step="0.01" type='range' min='0' max='1'><input style="width:50px" rv-input="page.camera.xOrigin"></td>
                                <td>YOrigin: <input rv-input="page.camera.yOrigin" step="0.01" type='range' min='0' max='1'><input style="width:50px" rv-input="page.camera.yOrigin"></td>
                            </tr>
                            <tr>
                                <td>InitialRotateX: <input rv-input="item.initialRotateX" step="0.01" type='range' min='-3.5' max='3.5'><input style="width:50px" rv-input="item.initialRotateX"></td>
                                <td>InitialRotateY: <input rv-input="item.initialRotateY" step="0.01" type='range' min='-3.5' max='3.5'><input style="width:50px" rv-input="item.initialRotateY"></td>
                                <td>InitialRotateZ: <input rv-input="item.initialRotateZ" step="0.01" type='range' min='-3.5' max='3.5'><input style="width:50px" rv-input="item.initialRotateZ"></td>
                            </tr>
                            <tr>
                                <td>Translation? <input type="checkbox" rv-checked="page.camera.translate"></td>
                                <td>X: <input rv-input="page.camera.translateX" type='range' min='-500' max='500'><input style="width:50px" rv-input="page.camera.translateX"></td>
                                <td>X Speed: <input rv-input="page.camera.translateXSpeed" type='range' min='100' max='3000'><input style="width:50px" rv-input="page.camera.translateXSpeed"></td>
                                <td>Y: <input rv-input="page.camera.translateY" type='range' min='-500' max='500'><input style="width:50px" rv-input="page.camera.translateY"></td>
                                <td>Y Speed:<input rv-input="page.camera.translateYSpeed" type='range' min='100' max='3000'><input style="width:50px" rv-input="page.camera.translateYSpeed"></td>
                            </tr>
                            <tr>
                                <td>Motion type: Sine<input rv-checked='page.camera.motionType' type="radio" value="sine"> Triangle<input rv-checked='page.camera.motionType' type="radio" value="triangle"> Sawtooth<input rv-checked='page.camera.motionType' type="radio" value="sawtooth"> Cos<input rv-checked='page.camera.motionType' type="radio" value="cos">
                                </td>
                            </tr>
                            <tr>
                                <td>Rotation? <input type="checkbox" rv-checked="page.camera.rotate"></td>
                                <td>Angle: <input rv-input="page.camera.rotateAngle" type='range' min='1' max='50'><input style="width:50px" rv-input="page.camera.rotateAngle"></td>
                                <td>Speed: <input rv-input="page.camera.rotateSpeed" type='range' min='100' max='3000'><input style="width:50px" rv-input="page.camera.rotateSpeed"></td>
                                <td>Rotate type: Sine<input rv-checked='page.camera.rotateType' type="radio" value="sine"> Triangle<input rv-checked='page.camera.rotateType' type="radio" value="triangle"> Sawtooth<input rv-checked='page.camera.rotateType' type="radio" value="sawtooth"> Cos<input rv-checked='page.camera.rotateType' type="radio" value="cos">
                                </td>
                            </tr>
                            <tr>
                                <td>Zooming? <input type="checkbox" rv-checked="page.camera.zoom"></td>
                                <td>Amount: <input rv-input="page.camera.zoomAmount" type='range' min='100' max='3000'><input style="width:50px" rv-input="page.camera.zoomAmount"></td>
                                <td>Speed: <input rv-input="page.camera.zoomSpeed" type='range' min='100' max='3000'><input style="width:50px" rv-input="page.camera.zoomSpeed"></td>
                                <td>Zoom type: Sine<input rv-checked='page.camera.zoomType' type="radio" value="sine"> Triangle<input rv-checked='page.camera.zoomType' type="radio" value="triangle"> Sawtooth<input rv-checked='page.camera.zoomType' type="radio" value="sawtooth"> Cos<input rv-checked='page.camera.zoomType' type="radio" value="cos">
                                </td>
                            </tr>
                            <tr>
                                <td>Accelerometer Translation? <input type="checkbox" rv-checked="page.camera.accel"></td>
                                <td>Amount: <input rv-input="page.camera.accelAmount" type='range' min='100' max='3000'><input style="width:50px" rv-input="page.camera.accelAmount"></td>
                            </tr>
                            <tr>
                                <td>Accelerometer Rotation? <input type="checkbox" rv-checked="page.camera.accelRotate"></td>
                                <td>Amount: <input rv-input="page.camera.accelRotateAmount" type='range' min='100' max='3000'><input style="width:50px" rv-input="page.camera.accelRotateAmount"></td>
                            </tr>
                            <tr>
                                <td>Zoom Perspective? <input type="checkbox" rv-checked="page.camera.perspectiveZoom"></td>
                                <td>Motion type: Sine<input rv-checked='page.camera.perspectiveZoomType' type="radio" value="sine"> Triangle<input rv-checked='page.camera.perspectiveZoomType' type="radio" value="triangle"> Sawtooth<input rv-checked='page.camera.perspectiveZoomType' type="radio" value="sawtooth"> Cos<input rv-checked='page.camera.perspectiveZoomType' type="radio" value="cos">
                                </td>
                                <td>Amount: <input rv-input="page.camera.perspectiveZoomAmount" type='range' min='-500' max='500'><input style="width:50px" rv-input="page.camera.perspectiveZoomAmount"></td>
                                <td>Speed: <input rv-input="page.camera.perspectiveZoomSpeed" type='range' min='100' max='3000'><input style="width:50px" rv-input="page.camera.perspectiveZoomSpeed"></td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>Cut? <input type="checkbox" rv-checked="page.camera.perspectiveZoomCut"></td>
                                <td>StartPercent: <input rv-input="page.camera.perspectiveZoomCutStart" type='range' min='0' max='100'><input style="width:50px" rv-input="page.camera.perspectiveZoomCutStart"></td>
                                <td>EndPercent: <input rv-input="page.camera.perspectiveZoomCutEnd" type='range' min='0' max='100'><input style="width:50px" rv-input="page.camera.perspectiveZoomCutEnd"></td>
                            </tr>

                        </tbody>
                    </table>
                </td>
            </tr>
            </table>
        </div>
    {{/with}}
</div>

<div id="device-area">
<img id="iphone-5-pic" src="/content/images/ipad.png">
<div id="device-screen" class="{{if hiddenOverflow 'hidden-overflow'}} iphone-5 famous-container"></div>
<div id="top-screen" class="{{if hiddenOverflow 'hidden-overflow'}} iphone-5 famous-container"></div>
</div>
